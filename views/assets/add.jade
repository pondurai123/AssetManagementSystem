extends ../layout

block content
  h1= title
  
  form(method="post")
    .row
      .col-md-6.mb-3
        label.form-label(for="uniqueId") Asset ID
        input.form-control#uniqueId(type="text", name="uniqueId", required)
      .col-md-6.mb-3
        label.form-label(for="serialNumber") Serial Number
        input.form-control#serialNumber(type="text", name="serialNumber", required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="make") Make
        input.form-control#make(type="text", name="make", required)
      .col-md-6.mb-3
        label.form-label(for="model") Model
        input.form-control#model(type="text", name="model", required)
    
    .row

     .col-md-6.mb-3
        label.form-label(for="categoryId") Category
        select.form-select#categoryId(name="categoryId", required)
          option(value="") Select Category
          each category in categories
            option(value=category.id)= category.name
      .col-md-6.mb-3
        label.form-label(for="branch") Branch
        input.form-control#branch(type="text", name="branch", required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="purchaseDate") Purchase Date
        input.form-control#purchaseDate(type="date", name="purchaseDate", required)
      .col-md-6.mb-3
        label.form-label(for="purchasePrice") Purchase Price
        .input-group
          span.input-group-text $
          input.form-control#purchasePrice(type="number", step="0.01", name="purchasePrice", required)
    
    .mb-3
      label.form-label(for="notes") Notes
      textarea.form-control#notes(name="notes", rows="3")
    
    .mb-3
      button.btn.btn-primary(type="submit") Save Asset
      a.btn.btn-secondary.ms-2(href="/assets") Cancel
