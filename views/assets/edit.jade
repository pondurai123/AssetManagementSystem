extends ../layout

block content
  h1= title
  
  form(method="post")
    .row
      .col-md-6.mb-3
        label.form-label(for="uniqueId") Asset ID
        input.form-control#uniqueId(type="text", name="uniqueId", value=asset.uniqueId, required)
      .col-md-6.mb-3
        label.form-label(for="serialNumber") Serial Number
        input.form-control#serialNumber(type="text", name="serialNumber", value=asset.serialNumber, required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="make") Make
        input.form-control#make(type="text", name="make", value=asset.make, required)
      .col-md-6.mb-3
        label.form-label(for="model") Model
        input.form-control#model(type="text", name="model", value=asset.model, required)

          
    .row
      .col-md-6.mb-3
        label.form-label(for="categoryId") Category
        select.form-select#categoryId(name="categoryId", required)
          option(value="") Select Category
          each category in categories
            option(value=category.id, selected=category.id===asset.categoryId)= category.name
      .col-md-6.mb-3
        label.form-label(for="branch") Branch
        input.form-control#branch(type="text", name="branch", value=asset.branch, required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="purchaseDate") Purchase Date
        input.form-control#purchaseDate(type="date", name="purchaseDate", value=asset.purchaseDate.toISOString().split('T')[0], required)
      .col-md-6.mb-3
        label.form-label(for="purchasePrice") Purchase Price
        .input-group
          span.input-group-text $
          input.form-control#purchasePrice(type="number", step="0.01", name="purchasePrice", value=asset.purchasePrice, required)
    
    .mb-3
      label.form-label(for="notes") Notes
      textarea.form-control#notes(name="notes", rows="3")= asset.notes

    .mb-3
      button.btn.btn-primary(type="submit") Update Asset
      a.btn.btn-secondary.ms-2(href="/assets") Cancel