extends ../layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        h1.h3.mb-4= title
        
        form(method="post")
          .mb-3
            label.form-label(for="assetId") Select Asset
            select.form-select#assetId(name="assetId", required)
              option(value="") Select Asset
              each asset in assets
                option(value=asset.id)= asset.uniqueId + ' - ' + asset.make + ' ' + asset.model + ' (' + asset.AssetCategory.name + ')'
          
          .mb-3
            label.form-label(for="employeeId") Select Employee
            select.form-select#employeeId(name="employeeId", required)
              option(value="") Select Employee
              each employee in employees
                option(value=employee.id)= employee.firstName + ' ' + employee.lastName + ' (' + employee.employeeId + ')'
          
          .mb-3
            label.form-label(for="issueDate") Issue Date
            input.form-control#issueDate(type="date", name="issueDate", value=new Date().toISOString().split('T')[0], required)
          
          .mb-3
            label.form-label(for="notes") Notes
            textarea.form-control#notes(name="notes", rows="3")
          
          .mb-3
            button.btn.btn-primary(type="submit") Issue Asset
            a.btn.btn-secondary.ms-2(href="/assets") Cancel