extends ../layout

block content
  h1= title
  
  form(method="post")
    .mb-3
      label.form-label(for="employeeId") Employee ID
      input.form-control#employeeId(type="text", name="employeeId", value=employee.employeeId, required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="firstName") First Name
        input.form-control#firstName(type="text", name="firstName", value=employee.firstName, required)
      .col-md-6.mb-3
        label.form-label(for="lastName") Last Name
        input.form-control#lastName(type="text", name="lastName", value=employee.lastName, required)
    
    .mb-3
      label.form-label(for="email") Email
      input.form-control#email(type="email", name="email", value=employee.email, required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for="department") Department
        input.form-control#department(type="text", name="department", value=employee.department, required)
      .col-md-6.mb-3
        label.form-label(for="branch") Branch
        input.form-control#branch(type="text", name="branch", value=employee.branch, required)
    
    .mb-3
      label.form-label(for="joiningDate") Joining Date
      input.form-control#joiningDate(type="date", name="joiningDate", value=employee.joiningDate.toISOString().split('T')[0], required)
    
    .form-check.mb-3
      input.form-check-input#isActive(type="checkbox", name="isActive", checked=employee.isActive)
      label.form-check-label(for="isActive") Is Active
    
    .mb-3
      button.btn.btn-primary(type="submit") Update Employee
      a.btn.btn-secondary.ms-2(href="/employees") Cancel